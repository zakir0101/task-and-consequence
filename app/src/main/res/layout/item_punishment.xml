<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        android:background="?attr/selectableItemBackground"
        android:clickable="true"
        android:focusable="true">

        <TextView
            android:id="@+id/tvPunishmentName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Punishment Name"
            android:textAppearance="?attr/textAppearanceHeadline6"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/tvSeverityLevel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="4dp"
            android:text="Severity: Small"
            android:textAppearance="?attr/textAppearanceBody1" />

        <TextView
            android:id="@+id/tvDescription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="This is a long description of the punishment, explaining the details and context. It may span multiple lines to provide a thorough understanding."
            android:ellipsize="end"
            android:maxLines="3"
            android:paddingTop="4dp"
            android:textAppearance="?attr/textAppearanceBody2"/>
    </LinearLayout>
</layout>

